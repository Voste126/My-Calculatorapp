<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E0202"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/buttonlayout"
        android:layout_marginBottom="70dp">

        <EditText
            android:id="@+id/edt_inputnum1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="true"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:verticalScrollbarPosition="right"
            android:text="" />

        <EditText
            android:id="@+id/edt_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:ellipsize="end"
            android:textSize="25dp"
            android:focusable="false"
            android:clickable="false"
            android:background="@android:color/transparent"
            android:textAlignment="viewEnd"
            android:padding="10dp"
            android:textStyle="bold"

            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="C"
                android:id="@+id/clear"
                android:textSize="30sp"
                android:textStyle="italic"
                android:textColor="#E31010"
                android:background="@drawable/ripple"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#7BE80C"
                android:background="@drawable/ripple"
                android:id="@+id/button7"
                android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="4"
                android:textColor="#7BE80C"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/button4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/button1"
                android:textColor="#7BE80C"
                android:background="@drawable/ripple"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="30sp"
                andrextColor="#7BE80C"
                android:background="@drawable/ripple"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="%"
                android:id="@+id/percent"
                android:textSize="30sp"
                android:textStyle="italic"
                android:textColor="#F1DA0E"
                android:background="@drawable/ripple"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#7BE80C"
                android:background="@drawable/ripple"
                android:id="@+id/button8"
                android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="5"
                android:textColor="#7BE80C"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/button5"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/button2"
                android:textColor="#7BE80C"
                android:background="@drawable/ripple"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="0"
                android:id="@+id/button00"
                android:textSize="30sp"
                andrextColor="#7BE80C"
                android:background="@drawable/ripple"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Backspace"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:gravity="center"
               android:drawableTint="@color/white"
                android:textColor="#092AFD"
               android:paddingTop="25dp"
                android:textSize="30sp"
                android:textStyle="italic"
                android:drawableTop="@drawable/ic_baseline_backspace_24"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#7BE80C"
                android:background="@drawable/ripple"
                android:id="@+id/button9"
                android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="6"
                android:textColor="#7BE80C"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/button6"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/button3"
                android:textColor="#7BE80C"
                android:background="@drawable/ripple"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="."
                android:id="@+id/buttodecimal"
                android:textSize="30sp"
                android:textColor="#0EFAE6"
                android:background="@drawable/ripple"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text=" รท"
                android:id="@+id/Division"
                android:textSize="30sp"
                android:textStyle="italic"
                android:textColor="#092AFD"
                android:background="@drawable/ripple"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#0CE8E1"
                android:background="@drawable/ripple"
                android:id="@+id/buttonmultiplication"
                android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="-"
                android:textColor="#E80CB8"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/buttonsubtract"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="30sp"
                android:textStyle="normal"
                android:id="@+id/buttonadd"
                android:textColor="#B80CE8"
                android:background="@drawable/ripple"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="="
                android:id="@+id/buttonequal"
                android:textSize="30sp"
                android:textColor="#EF9208"
                android:background="@drawable/ripple"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>